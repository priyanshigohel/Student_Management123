@model IEnumerable<Student_Management.Model.Models.Student>
@{
	ViewData["Title"] = "StudentList";
}

<div class=" row pt-4">
	<div class="col-6">
		<form asp-controller="Student" asp-action="UploadData" method="post" enctype="multipart/form-data">
			<input type="file" name="file" />

			<button class="btn btn-success mx-1" type="submit">Import Excel</button>
		</form>
	</div>
	<div class=" col-6 text-end">
		<a asp-controller="Student" asp-action="AddStudent" class="btn btn-dark">
			<i class="bi bi-plus-circle"></i> &nbsp; Add Student
		</a>

		<a asp-controller="Course" asp-action="CourseIndex" class="btn btn-dark">
			&nbsp; View Courses
		</a>

		<a class="btn btn-danger" asp-controller="Student" asp-action="Login">Logout</a>
		
	</div>
</div>

<div class="container p-3">
	<div class=" row pt-4">
		<div class="col-6">
			<h2 class="text-dark">Student List </h2>

		</div>
	</div>

	<form method="get" asp-controller="Student" asp-action="Index" class="d-flex col-4">
		<input class="form-control me-sm-2" type="text" placeholder="Search By Student Name..." name="name" value="@ViewBag.SearchStr">
		<button class="btn btn-dark mx-1" type="submit">Search</button>
	</form>

	<br /><br />
	
	<table class="table table-bordered table-striped">
		<thead class="bg-dark text-white">
			<tr>
				<th scope="col">
					Name
				</th>
				<th scope="col">
					Email
				</th>
				<th scope="col">
					Contact
				</th>
				<th scope="col">
					Roll No
				</th>
				<th scope="col">
					Address
				</th>
				<th scope="col">
					State

				</th>
				<th scope="col">
					City

				</th>
				<th scope="col">
					Zipcode
				</th>
				<th scope="col">
					Total
				</th>

				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>

					<td>
						@obj.Name
					</td>
					<td>
						@obj.Email
					</td>
					<td>
						@obj.ContactNo
					</td>
					<td>
						@obj.RollNo
					</td>

					<td>
						@obj.Address
					</td>

					<td>
						@obj.State
					</td>

					<td>
						@obj.City
					</td>

					<td>
						@obj.ZipCode
					</td>
					<td>
						@obj.CourseTotalPrice
					</td>

					<td width="30%">
    					<div class="w-75 btn-group" role="group">
				
                           <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@obj.StudentId" class="btn btn-success mx-1">
								<i class="bi bi-pencil-square"></i>
							</a>

							<a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@obj.StudentId" class="btn btn-danger mx-1">
								<i class="bi bi-trash-fill"></i>
							</a>
							<a asp-controller="Student" asp-action="AddCourse" asp-route-id="@obj.StudentId" class="btn btn-dark mx-1">
								Add Course
							</a>
							<a asp-controller="Student" asp-action="ViewCourse" asp-route-id="@obj.StudentId" class="btn btn-dark mx-1">
								View
							</a>
						</div>	
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>



