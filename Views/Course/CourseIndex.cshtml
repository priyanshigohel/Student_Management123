@model IEnumerable<Student_Management.Model.Models.Course>
<div class=" row pt-4">
	<div class="col-6">
		
	</div>
	<div class=" col-6 text-end">
		<div>

			<a asp-controller="Course" asp-action="AddCourse" class="btn btn-dark">
				<i class="bi bi-plus-circle"></i> &nbsp; Add Course
			</a>
			<a asp-controller="Student" asp-action="Index" class="btn btn-dark">
				 Back
			</a>
		</div>
	</div>
</div>

<div class="container p-3">
	<div class=" row pt-4">
		<div class="col-6">
			<h2 class="text-dark">Course List </h2>

		</div>
	</div>

	<form method="get" asp-controller="Course" asp-action="CourseIndex" class="d-flex col-4">
		<input class="form-control me-sm-2" type="text" placeholder="Search By Course Name..." name="name" value="@ViewBag.SearchStr">
		<button class="btn btn-dark mx-1" type="submit">Search</button>
	</form>

	<br /><br />
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr class="bg-dark text-white">

				<th>
					CourseId
				</th>
				<th>
					CourseName
				</th>
				<th>
					CoursePrice
				</th>
				


				<th>Action</th>

			</tr>

		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>

					<td width="10%">
						@obj.CourseId
					</td>
					<td width="5%">
						@obj.CourseName
					</td>
					<td width="10%">
						@obj.CoursePrice
					</td>
					
					<td width="30%">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Course" asp-action="EditCourse" asp-route-id="@obj.CourseId" class="btn btn-success mx-1">
								<i class="bi bi-pencil-square"></i>
							</a>

							<a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@obj.CourseId" class="btn btn-danger mx-1">
								<i class="bi bi-trash-fill"></i>
							</a>

						</div>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>